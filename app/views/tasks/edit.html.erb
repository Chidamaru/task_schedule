<h3>スケジュール更新</h3>
 
 <%= form_with model: @task do |f| %>
    <table>
    <tr>
      <th><%= f.label :name ,"予定" %></th>
      <td><%= f.text_field :name %></td>
    </tr>

    <tr>
      <th><%= f.label :start ,"開始" %></th>
      <td><%= f.date_select :start %></td>
    </tr>

    <tr>
      <th><%= f.label :finish ,"終了" %></th>
      <td><%= f.date_select :finish %></td>
    </tr>
    <tr>
      <th><%= f.label :discription ,"詳細" %></th>
      <td><%= f.text_area :discription %></td>
    </tr>
  </table>

   <div>
     <ul>
       <li><%= f.submit "編集を完了する" %></li>
       <li><%= link_to "スケジュール一覧に戻る", :tasks %></li>
     </ul>
   </div>
 <% end %>