<h3>スケジュール一覧</h3>
<% if flash[:notice] %>
   <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
   <thead>
     <tr>
       <th>id</th>
       <th>予定</th>
       <th>開始</th>
       <th>終了</th>
       <th>更新日</th>
       <th>確認</th>
       <th>更新</th>
       <th>削除</th>

     </tr>
   </thead>
 
   <tbody>
     <% @tasks.each do |task| %>
       <tr>
         <td><%= task.id %></td>
         <td><%= task.name %></td>
         <td><%= task.start.to_s(:datetime_jp) %></td>
         <td><%= task.finish.to_s(:datetime_jp) %></td>
         <td><%= task.updated_at.to_s(:datetime_jp) %></td>
         <td>
         <%= link_to "確認", task %>
         </td>
         <td>
         <%= link_to "編集", [:edit, task] %>
         </td>
         <td>
         <%= button_to "削除", task, method: :delete %>
        </td>
       </tr>
     <% end %>
   </tbody>
 </table>

<p><%= link_to "スケジュール新規登録", :new_task %></p>